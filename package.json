{
  "name": "chirper",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all clean transpile",
    "clean": "rimraf dist-server",
    "dev": "NODE_ENV=development npm-run-all build server",
    "jest": "jest",
    "prod": "NODE_ENV=production npm-run-all build server",
    "server": "node ./dist-server/bin/www",
    "start": "npm run prod",
    "transpile": "babel ./server --out-dir dist-server"
  },
  "dependencies": {
    "@babel/preset-env": "^7.11.5",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "babel-preset-env": "^1.7.0",
    "jest": "^26.4.2"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
