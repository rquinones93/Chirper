// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @default(autoincrement()) @id
  bio            String
  created_at     DateTime
  chirps         Chirp[]
  password       String
  pinnedChirp    Int
  privacyStatus  Int
  profilePicture String
  username       String
}

model Chirp {
  id         Int      @default(autoincrement()) @id
  content    String
  created_at DateTime
  user_id    Int
  User       User?    @relation(fields: [userId], references: [id])
  userId     Int?
}
