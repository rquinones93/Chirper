type Chirp {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  content: String!
  owner: User! @relation(link: INLINE)
}

type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  username: String! @unique
  chirps: [Chirp]
  pinnedChirp: Int @default(value: 0)
  password: String
  profilePicture: String
  bio: String
  privacyStatus: PrivacyStatus @default(value: PUBLIC)
}

enum PrivacyStatus {
  PRIVATE
  PUBLIC
}
